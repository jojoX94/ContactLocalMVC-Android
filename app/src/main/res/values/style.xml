<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="titleEditext" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">18dp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bodyEditext" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/greyLight</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="BorderInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxStrokeColor">#E6B0B1B9</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:textColorHint">@color/pink</item>
    </style>

    <style name="DropdownBox" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="materialThemeOverlay">@style/AppTheme.ExposedDropdownMenu.MaterialThemeOverlay
        </item>
        <item name="boxStrokeColor">#E6B0B1B9</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxBackgroundMode">filled</item>
    </style>

    <style name="AppTheme.ExposedDropdownMenu.MaterialThemeOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- background color of dropdown (popup) items -->

        <item name="colorSurface">@color/white</item>
        <item name="android:popupElevation">0dp</item>
    </style>

    <style name="bodyEditext.lable">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#9C000000</item>
    </style>

    <style name="nunito_regular">
        <item name="fontFamily">@font/nunito_semibold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="nunito_regular.btn">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="drawerTtile" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:textSize">33sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@color/white</item>
        <item name="shapeAppearance">@style/ShapeAppearance.App.LargeComponent</item>
    </style>

    <style name="ShapeAppearance.App.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">24dp</item>
    </style>

    <style name="dialogSelect_title" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/greyLight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialogSelect_item" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recycler.item_title" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/blackV</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recycler.item_body" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/blackVLight</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>