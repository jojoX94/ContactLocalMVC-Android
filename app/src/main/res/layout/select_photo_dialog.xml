<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:text="Select source"
        android:textAppearance="@style/dialogSelect_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_cam"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/ic_dialog_select"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:srcCompat="@drawable/ic_photo"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Camera"
        android:paddingBottom="20dp"

        android:textAppearance="@style/dialogSelect_item"
        app:layout_constraintEnd_toEndOf="@+id/btn_cam"
        app:layout_constraintStart_toStartOf="@+id/btn_cam"
        app:layout_constraintTop_toBottomOf="@+id/btn_cam" />

    <ImageButton
        android:id="@+id/btn_gall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="40dp"
        android:background="@drawable/ic_dialog_select"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/btn_cam"
        app:layout_constraintTop_toTopOf="@+id/btn_cam"
        app:srcCompat="@drawable/ic_gallery"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/textGallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Gallery"
        android:paddingBottom="20dp"
        android:textAppearance="@style/dialogSelect_item"
        app:layout_constraintEnd_toEndOf="@+id/btn_gall"
        app:layout_constraintStart_toStartOf="@+id/btn_gall"
        app:layout_constraintTop_toBottomOf="@+id/btn_gall" />

</androidx.constraintlayout.widget.ConstraintLayout>